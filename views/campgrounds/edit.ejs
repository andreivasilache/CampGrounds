<% include ../partials/header %>  

<div class="container">
    <div class="row" >
          <div style="margin:0 auto; width:33%">
             <h1 style=""> Edit campground!</h1></br>
        <form action="/campgrounds/<%=elem._id%>/edit?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control"  name="name" type="text" value="<%= elem.name %>">
            </div>
            <div class="form-group">
                <input class="form-control"  name="price" type="number" value="<%= elem.price %>" min="0.00" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control"  name="image" type="text" value="<%= elem.image %>">
            </div>
            <div class="form-group">
                <input class="form-control"  name="description" type="text" value="<%= elem.description %>">
            </div>
           <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Add</button>
            </div>
            <a href="/campgrounds">Go back</a>
        </form>
      </div>
 </div>
</div>

<% include ../partials/bottom %>
<% include ../partials/header %>
     

<div class="container">
    
  <header class="jumbotron">
      <div class="container">
          <h1>Welcome to Vasilache Andrei's first web page!</h1>
          <h4> PS: Created with node :D </h4>
          <h4> PS#2: Yea,I love Pugs    </h4></br>

          <p>
              <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground</a>
          </p>
     </div>
</header>
  
  
<div class="row text-center" style="display:flex; flex-wrap:wrap">
   <% camp.forEach(function(camp){ %>
      <div class="col-md-3 col-sm-6">
          
             <div class="img-thumbnail" >
                 <img class="img-fluid max-width:30px" src="<%= camp.image %>">
                  <div class="caption">
                    <h4> <%= camp.name %> </h4>
                    <a href="/campgrounds/<%=camp._id%>"class="btn btn-primary btn-sm">Show info</a>
                  </div>
              </div>
      
     </div>
     <% }); %>
  </div>
</div>

  


  


